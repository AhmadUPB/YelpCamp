<% layout("layouts/Boilerplate") %>

    <h1>All Campgrounds</h1>
    <div><a href="/campgrounds/new">New Campground</a></div>
    <% for( let index=0; index < campgrounds.length; index++ ) { %>

        <div class="card my-4">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campgrounds[index].image %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campgrounds[index].title %>
                        </h5>
                        <p class="card-text">
                            <%= campgrounds[index].description %>
                        </p>
                        <p class="card-text text-secondary">
                            <%= campgrounds[index].location %>
                        </p>
                        <a href="/campgrounds/<%= campgrounds[index]._id %>" class="btn btn-primary"> View <%=
                                campgrounds[index].title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>


        <% } %>